{
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "overrides": [
        {
            "files": ["*.json"],
            "options": {
                "trailingComma": "es5",
                "tabWidth": 4,
                "semi": false,
                "singleQuote": false
            }
        },
        {
            "files": ["ts*.json", "package*.json"],
            "options": {
                "trailingComma": "es5",
                "tabWidth": 2,
                "semi": false,
                "singleQuote": false
            }
        }
    ]
}
